{
	"name": "jonnybarnes/jbl5",
	"description": "The code for jonnybanres.uk, based on Laravel 5.",
	"keywords": ["framework", "laravel", "indieweb"],
	"license": "CC0",
	"type": "project",
	"require": {
		"laravel/framework": "5.0.*",
		"jonnybarnes/unicode-tools": "dev-master",
		"jonnybarnes/posse": "dev-master",
		"jonnybarnes/webmentions-parser": "dev-master",
		"guzzlehttp/guzzle": "~5.2",
		"predis/predis": "~1.0",
		"league/commonmark": "0.7.*",
		"filp/whoops": "~1.1",
		"thujohn/twitter": "2.0.x-dev",
		"mf2/mf2": "0.2.*",
		"chromabits/purifier": "~2.1",
		"martinbean/laravel-sluggable-trait": "0.2.*",
		"indieauth/client": "0.1.*"
	},
	"require-dev": {
		"phpunit/phpunit": "~4.0",
		"phpspec/phpspec": "~2.1",
		"barryvdh/laravel-debugbar": "~2.0"
	},
	"autoload": {
		"classmap": [
			"database"
		],
		"psr-4": {
			"App\\": "app/"
		}
	},
	"autoload-dev": {
		"classmap": [
			"tests/TestCase.php"
		]
	},
	"scripts": {
		"post-install-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-update-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-create-project-cmd": [
			"php -r \"copy('.env.example', '.env');\"",
			"php artisan key:generate"
		]
	},
	"repositories": [
		{
			"name": "jonnybarnes/posse",
			"type": "git",
			"url": "https://github.com/jonnybarnes/posse.git"
		},
		{
			"name": "jonnybarnes/webmentions-parser",
			"type": "git",
			"url": "https://github.com/jonnybarnes/webmentions-parser"
		}
	],
	"config": {
		"preferred-install": "dist"
	}
}
